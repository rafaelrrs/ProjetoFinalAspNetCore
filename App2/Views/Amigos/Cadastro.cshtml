<form action="/amigos/cadastro" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" placeholder="Nome do amigo" name="nome">
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input type="email" class="form-control" placeholder="E-mail do amigo" name="email">
    </div>

    <div class="form-group">
        <label>Aniversário</label>
        <input type="date" class="form-control" placeholder="Data de Aniversário" name="aniversario">
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
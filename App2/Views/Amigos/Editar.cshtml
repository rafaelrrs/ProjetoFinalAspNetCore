@model Amigo

<form action="/amigos/editar?id=@Model.Id" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input type="text" class="form-control" placeholder="Nome do amigo" value="@Model.Nome" name="nome">
    </div>

    <div class="form-group">
        <label>E-mail</label>
        <input type="email" class="form-control" placeholder="E-mail do amigo" value="@Model.Email" name="email">
    </div>

    <div class="form-group">
        <label>Aniversário</label>
        <input type="datetime" class="form-control" placeholder="Data de Aniversário" value="@Model.Aniversario" name="aniversario">
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>